{
  "name": "clean-arch-boilerplate",
  "version": "0.0.0",
  "description": "Clean architecture boilerplate",
  "main": "src/main/server.js",
  "scripts": {
    "test": "jest --passWithNoTests --no-cache",
    "test:unit": "npm test -- --watch -c jest-unit.config.js",
    "test:integration": "npm test -- --watch -c jest-integration.config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "jest --passWithNoTests --no-cache --coverage",
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "rimraf dist && tsc -p tsconfig.build.json -w",
    "debug": "nodemon -L --watch . --inspect=0.0.0.0:9229 --nolazy ./src/main/server.js",
    "docker": "PROJECT_NAME=$npm_package_name docker compose -f docker-compose-dev.yaml",
    "dev:up": "npm run docker -- up",
    "dev:down": "npm run docker -- down",
    "start": "node ./src/main/server.js",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "author": "Marcos Lopes",
  "license": "ISC",
  "engines": {
    "node": "16.x"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "module-alias": "^2.2.2",
    "winston": "^3.8.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.4.0",
    "@shelf/jest-mongodb": "^4.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.6.5",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "eslint": "^8.21.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.8.1",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-promise": "^6.0.0",
    "git-commit-msg-linter": "^4.1.3",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-mock-extended": "^2.0.7",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  }
}
